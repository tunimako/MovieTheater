@{
    ViewData["Title"] = "Movies";
}
<div>
    <div style ="width:30%; float:left">
        <h1>Movies</h1>
    </div>
    <div style ="width:20%; float:right">
        <a type="button" class="btn btn-lg btn-success" asp-controller="Movies" asp-action="Create">Add Movie</a>
    </div>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th align="center">
                <h6>Number of showtimes</h6>
            </th>
@*            <th>
                @Html.DisplayNameFor(model => model.MovieGenres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AgeRating)
            </th>*@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th>
                    @Html.DisplayFor(modelItem => item.Name)
                </th>
               <td>
                    @Html.DisplayFor(modelItem => item.ShowTimes.Count)
                </td>
@*                <td>
                    @foreach (var genre in item.MovieGenres)
                    {
                       <p>@Html.DisplayFor(g => genre.Genre)</p>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AgeRating)
                </td>*@
                <td >
                    <a asp-action="Detail" asp-route-id="@item.Id">Detail</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
					<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>